<?xml version="1.0" encoding="UTF-8"?>
<config>

    <modules>
        <Aoe_Static>
            <active>true</active>
            <codePool>local</codePool>
            <version>0.0.1</version>
        </Aoe_Static>
    </modules>

    <global>
        <blocks>
            <aoestatic>
                <class>Aoe_Static_Block</class>
            </aoestatic>
        </blocks>
        <models>
            <aoestatic>
                <class>Aoe_Static_Model</class>
            </aoestatic>
        </models>
        <helpers>
            <aoestatic>
                <class>Aoe_Static_Helper</class>
            </aoestatic>
        </helpers>
        <cache>
            <types>
                <aoestatic translate="label,description" module="aoestatic">
                    <label>Full Page Cache</label>
                    <description>Full Page Cache provided by Aoe_Static</description>
                    <tags>AOESTATIC,AOESTATIC_URLS</tags>
                </aoestatic>
            </types>
        </cache>
    </global>

    <frontend>
        <layout>
            <updates>
                <aoestatic>
                    <file>aoestatic/aoestatic.xml</file>
                </aoestatic>
            </updates>
        </layout>
        <routers>
            <aoestatic>
                <use>standard</use>
                <args>
                    <module>Aoe_Static</module>
                    <frontName>phone</frontName>
                </args>
            </aoestatic>
        </routers>
        <events>
            <controller_action_predispatch>
                <observers>
                    <aoestatic>
                        <type>singleton</type>
                        <class>aoestatic/observer</class>
                        <method>processPreDispatch</method>
                    </aoestatic>
                </observers>
            </controller_action_predispatch>
            <http_response_send_before>
                <observers>
                    <aoestatic>
                        <type>singleton</type>
                        <class>aoestatic/observer</class>
                        <method>httpResponseSendBefore</method>
                    </aoestatic>
                </observers>
            </http_response_send_before>
            <application_clean_cache>
                <observers>
                    <aoestatic>
                        <type>singleton</type>
                        <class>aoestatic/observer</class>
                        <method>applicationCleanCache</method>
                    </aoestatic>
                </observers>
            </application_clean_cache>
            <model_load_after>
                <observers>
                    <aoestatic>
                        <type>singleton</type>
                        <class>aoestatic/observer</class>
                        <method>modelLoadAfter</method>
                    </aoestatic>
                </observers>
            </model_load_after>
        </events>
    </frontend>

    <aoestatic>
        <backends>
            <magento>
                <label>Magento Cache</label>
                <model>aoestatic/backend_magento</model>
            </magento>
        </backends>
    </aoestatic>
    
    <default>
        <system>
            <aoe_static>
                <cache_actions><![CDATA[cms_index_index;86400,
cms_page_view;86400,
catalog_product_view;86400,
catalog_category_view;86400]]></cache_actions>
                <jslib>prototype</jslib>
                <cache_control>public, must-revalidate, s-maxage=%d</cache_control>
            </aoe_static>
        </system>
        <dev>
            <template>
                <allow_symlink>1</allow_symlink>
            </template>
        </dev>
    </default>

</config>
