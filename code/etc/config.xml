<?xml version="1.0" encoding="UTF-8"?>
<config>

    <modules>
        <Aoe_Static>
            <active>true</active>
            <codePool>local</codePool>
            <version>0.0.1</version>
        </Aoe_Static>
    </modules>

    <global>
        <blocks>
            <aoestatic>
                <class>Aoe_Static_Block</class>
            </aoestatic>
        </blocks>
        <models>
            <aoestatic>
                <class>Aoe_Static_Model</class>
            </aoestatic>
        </models>
        <helpers>
            <aoestatic>
                <class>Aoe_Static_Helper</class>
            </aoestatic>
        </helpers>
        <cache>
            <types>
                <aoestatic translate="label,description" module="aoestatic">
                    <label>Full Page Cache</label>
                    <description>Full Page Cache provided by Aoe_Static</description>
                    <tags>AOESTATIC,AOESTATIC_URLS</tags>
                </aoestatic>
            </types>
        </cache>
        <events>
            <!-- When cache tags are cleaned, invalidate cached pages -->
            <application_clean_cache>
                <observers>
                    <aoestatic>
                        <type>singleton</type>
                        <class>aoestatic/observer</class>
                        <method>applicationCleanCache</method>
                    </aoestatic>
                </observers>
            </application_clean_cache>
        </events>
    </global>

    <frontend>
        <layout>
            <updates>
                <aoestatic>
                    <file>aoestatic/aoestatic.xml</file>
                </aoestatic>
            </updates>
        </layout>
        <routers>
            <aoestatic>
                <use>standard</use>
                <args>
                    <module>Aoe_Static</module>
                    <frontName>phone</frontName>
                </args>
            </aoestatic>
        </routers>
        <events>
            <!-- Check if cache should be enabled -->
            <controller_action_predispatch>
                <observers>
                    <aoestatic>
                        <type>singleton</type>
                        <class>aoestatic/observer</class>
                        <method>processPreDispatch</method>
                    </aoestatic>
                </observers>
            </controller_action_predispatch>

            <!-- If cache is enabled, let backend cache response -->
            <http_response_send_before>
                <observers>
                    <aoestatic>
                        <type>singleton</type>
                        <class>aoestatic/observer</class>
                        <method>httpResponseSendBefore</method>
                    </aoestatic>
                </observers>
            </http_response_send_before>

            <!-- Collect all loaded cache tags to associate with page -->
            <model_load_after>
                <observers>
                    <aoestatic>
                        <type>singleton</type>
                        <class>aoestatic/observer</class>
                        <method>modelLoadAfter</method>
                    </aoestatic>
                </observers>
            </model_load_after>
        </events>
    </frontend>

    <aoestatic>

        <!-- Cacheable actions and their lifetimes -->
        <actions>
            <cms_index_index>86400</cms_index_index>
            <cms_page_view>86400</cms_page_view>
            <catalog_product_view>86400</catalog_product_view>
            <catalog_category_view>86400</catalog_category_view>
        </actions>

        <!-- List of available cache backend models -->
        <backends>
            <magento>
                <label>Magento Cache</label>
                <model>aoestatic/backend_magento</model>
            </magento>
        </backends>

        <!-- Supported javascript libraries for dynamic block replacement -->
        <jslibs>
            <prototype>
                <label>Prototype (default)</label>
                <path>aoestatic/fpc-prototype.js</path>
            </prototype>
            <jquery>
                <label>jQuery</label>
                <path>aoestatic/fpc-jquery.js</path>
            </jquery>
        </jslibs>

        <!-- Blocks that are ignored for fresh sessions (ignored by default) -->
        <ignored>
            <foo/>
            <bar/>
        </ignored>
    </aoestatic>
    
    <default>
        <system>
            <aoe_static>
                <usejs>1</usejs>
                <jslib>aoestatic/fpc-prototype.js</jslib>
                <cache_control>public, must-revalidate, s-maxage=%d</cache_control>
            </aoe_static>
        </system>
        <dev>
            <template>
                <allow_symlink>1</allow_symlink>
            </template>
        </dev>
    </default>

</config>
