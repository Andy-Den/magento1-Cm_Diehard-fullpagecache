<config>
	<sections>
		<system>
			<groups>
				<aoe_static>
					<label>Full-Page Cache Configuration (Aoe_Static)</label>
					<frontend_type>text</frontend_type>
					<sort_order>200</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<cache_actions translate="label">
							<label>Cacheable actions</label>
							<comment><![CDATA[Commaseparated list of <b>"&lt;route&gt;_&lt;controller&gt;_&lt;action&gt;;&lt;lifeTimeInSeconds&gt;" </b> The output generated from these actions will be cached by Varnish.]]></comment>
							<frontend_type>textarea</frontend_type>
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</cache_actions>
						<jslib translate="label">
							<label>Javascript Library</label>
							<comment><![CDATA[Load non-cacheable blocks via Ajax using this library (must already be included).]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>aoestatic/system_config_jslib</source_model>
							<sort_order>110</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</jslib>
						<backend translate="label">
							<label>Cache Backend</label>
							<comment><![CDATA[Choose a backend driver for the cache (handles caching response and purging cache).]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>aoestatic/system_config_backend</source_model>
							<sort_order>120</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</backend>
						<cachecontrol translate="label">
							<label>Cache-Control Header</label>
							<comment><![CDATA[Choose how the content can be cached.]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>aoestatic/system_config_cachecontrol</source_model>
							<sort_order>130</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</cachecontrol>
					</fields>
				</aoe_static>
			</groups>
		</system>
	</sections>
</config>
